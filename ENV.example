# DeliGo Food Delivery App - Environment Configuration
# Copy this file to .env.local for local development
# Update values for staging/production environments

# =============================================================================
# CORE API CONFIGURATION
# =============================================================================

# Backend API Base URL - Replace with your actual API endpoint
REACT_APP_API_BASE_URL=https://api.deligo.com
# For local development: http://localhost:3001/api
# For staging: https://staging-api.deligo.com

# API Version (optional, for versioned APIs)
REACT_APP_API_VERSION=v1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for client-side token validation (public key)
REACT_APP_JWT_PUBLIC_KEY=your_jwt_public_key_here

# OAuth2 Configuration (if using OAuth)
REACT_APP_OAUTH_CLIENT_ID=your_oauth_client_id
REACT_APP_OAUTH_REDIRECT_URI=https://app.deligo.com/auth/callback

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=60

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key_here
# Production: pk_live_your_stripe_public_key_here

# Alternative Payment Providers (choose one)
REACT_APP_SQUARE_APPLICATION_ID=your_square_app_id
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id

# Payment processor selection
REACT_APP_PAYMENT_PROVIDER=stripe
# Options: stripe, square, paypal

# =============================================================================
# MAPS & LOCATION SERVICES
# =============================================================================

# Google Maps API Key
REACT_APP_GOOGLE_MAPS_API_KEY=AIzaSyBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Mapbox (alternative to Google Maps)
REACT_APP_MAPBOX_ACCESS_TOKEN=pk.ey...your_mapbox_token

# Default map center coordinates (latitude, longitude)
REACT_APP_DEFAULT_LAT=-1.9441
REACT_APP_DEFAULT_LNG=30.0619
# Above coordinates are for Kigali, Rwanda

# Map provider selection
REACT_APP_MAP_PROVIDER=google
# Options: google, mapbox

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================

# Firebase Configuration for Push Notifications
REACT_APP_FIREBASE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_FIREBASE_AUTH_DOMAIN=deligo-app.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=deligo-app
REACT_APP_FIREBASE_STORAGE_BUCKET=deligo-app.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:xxxxxxxxxxxxxxxxx

# Firebase Messaging VAPID Key (for web push)
REACT_APP_FIREBASE_VAPID_KEY=BNxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# IMAGE & FILE STORAGE
# =============================================================================

# Cloudinary Configuration for Image Uploads
REACT_APP_CLOUDINARY_CLOUD_NAME=deligo-images
REACT_APP_CLOUDINARY_API_KEY=123456789012345
REACT_APP_CLOUDINARY_UPLOAD_PRESET=deligo_menu_items

# AWS S3 (alternative to Cloudinary)
REACT_APP_AWS_S3_BUCKET=deligo-app-images
REACT_APP_AWS_REGION=us-east-1

# Image storage provider
REACT_APP_IMAGE_PROVIDER=cloudinary
# Options: cloudinary, aws_s3, local

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# SMS Service (Twilio)
REACT_APP_TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_TWILIO_PHONE_NUMBER=+1234567890

# Email Service Configuration
REACT_APP_EMAIL_SERVICE=sendgrid
REACT_APP_SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Customer Support
REACT_APP_SUPPORT_PHONE=+250788123456
REACT_APP_SUPPORT_EMAIL=support@deligo.com
REACT_APP_SUPPORT_WHATSAPP=+250788123456

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Monitoring
REACT_APP_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o123456.ingest.sentry.io/123456

# LogRocket Session Replay
REACT_APP_LOGROCKET_APP_ID=xxxx/deligo-app

# Hotjar User Analytics
REACT_APP_HOTJAR_ID=1234567

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================

# Environment identifier
REACT_APP_ENVIRONMENT=development
# Options: development, staging, production

# Feature flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_VOICE_ORDERING=true
REACT_APP_ENABLE_FOOD_SCANNING=true
REACT_APP_ENABLE_DRONE_DELIVERY=false
REACT_APP_ENABLE_LOYALTY_PROGRAM=true
REACT_APP_ENABLE_REFERRAL_SYSTEM=true

# Debug mode
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_CONSOLE_LOGS=true

# =============================================================================
# DELIVERY & LOGISTICS
# =============================================================================

# Delivery Service Integration
REACT_APP_DELIVERY_PROVIDER=internal
# Options: internal, uber_eats, doordash, custom

# Delivery tracking
REACT_APP_ENABLE_LIVE_TRACKING=true
REACT_APP_TRACKING_UPDATE_INTERVAL=30000
# Interval in milliseconds (30000 = 30 seconds)

# Geofencing radius (in meters)
REACT_APP_DELIVERY_RADIUS=5000

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Default currency
REACT_APP_CURRENCY=RWF
REACT_APP_CURRENCY_SYMBOL=â‚¹

# Supported languages
REACT_APP_SUPPORTED_LANGUAGES=en,rw
REACT_APP_DEFAULT_LANGUAGE=en

# Business hours (24-hour format)
REACT_APP_DEFAULT_BUSINESS_HOURS_START=06:00
REACT_APP_DEFAULT_BUSINESS_HOURS_END=23:00

# Delivery fee configuration
REACT_APP_BASE_DELIVERY_FEE=1000
REACT_APP_FREE_DELIVERY_THRESHOLD=15000

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# API request timeout (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# Image optimization
REACT_APP_IMAGE_QUALITY=80
REACT_APP_IMAGE_FORMAT=webp

# Caching configuration
REACT_APP_CACHE_DURATION=300000
# Cache duration in milliseconds (300000 = 5 minutes)

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# App store links
REACT_APP_IOS_APP_STORE_URL=https://apps.apple.com/app/deligo
REACT_APP_ANDROID_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.deligo.app

# Legal pages
REACT_APP_PRIVACY_POLICY_URL=https://deligo.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://deligo.com/terms
REACT_APP_COOKIE_POLICY_URL=https://deligo.com/cookies

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Mock data configuration
REACT_APP_USE_MOCK_DATA=false
REACT_APP_MOCK_API_DELAY=1000

# Development API override
REACT_APP_DEV_API_OVERRIDE=false
REACT_APP_DEV_API_URL=http://localhost:3001

# =============================================================================
# SOCIAL MEDIA & SHARING
# =============================================================================

# Social media links
REACT_APP_FACEBOOK_URL=https://facebook.com/deligo
REACT_APP_TWITTER_URL=https://twitter.com/deligo
REACT_APP_INSTAGRAM_URL=https://instagram.com/deligo

# Social sharing configuration
REACT_APP_ENABLE_SOCIAL_SHARING=true
REACT_APP_SOCIAL_SHARE_IMAGE=https://deligo.com/images/share-image.jpg

